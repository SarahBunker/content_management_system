<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <a href="/<%= file %>/edit" >Edit</a>
      <form class="inline" action="/<%= file %>/delete" method="post">
        <button type="submit" class="delete">delete</button>
      </form>
    </li>
  <% end %>
</ul>

